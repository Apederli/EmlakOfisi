@model AdvertismenetViewModel
@{
    ViewData["Title"] = "UpdateAdvertisement";
}
<link href="~/css/Table.css" rel="stylesheet" />
<div class="container">
    <div class="row m-5">
        <div class="col-md-8 offset-2">
            <form asp-action="UpdateAdvertisement" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="form-check">
                    <label>Satılık - Kiralık</label><br/>
                    <input type="radio" name="rentSale" class="form-check-input" id="sale" asp-for="RentOrSale" value="true"/>
                    <label class="form-check-label" for="sale">Satılık</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="rentSale" id="rent" class="form-check-input" asp-for="RentOrSale" value="false"/>
                    <label class="form-check-label" for="rent">Kiralık</label>
                    <span asp-validation-for="RentOrSale" style="color: red;"></span>
                </div>

                <div class="form-group input-group">
                    <select class="form-control" asp-for="CityId" asp-items="Model.SelectCity"></select><br/>
                    <span asp-validation-for="CityId" class="form-text" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="İlan Başlığı" asp-for="Title">
                    <span asp-validation-for="Title" class="form-text" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Fiyat" asp-for="Price">
                    <span asp-validation-for="Price" class="form-text" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="m²" asp-for="SquareMeters">
                    <span asp-validation-for="SquareMeters" class="form-text" style="color: red;"></span>
                </div>
                <div class="form-group input-group">
                    <select class="form-control" asp-for="RoomId" asp-items="Model.SelectRoom"></select><br/>
                    <span asp-validation-for="RoomId" class="form-text" style="color: red;"></span>
                </div>
                <div class="form-check m-lg-1">
                    <input class="form-check-input" type="checkbox" value="true" name="balcony" id="flexCheckDefault0" asp-for="Balcony">
                    <label class="form-check-label" for="flexCheckDefault0">
                        Balkon
                    </label>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control" name="imageUrl" id="imageUrl" placeholder="Resim Yükle" asp-for="Photo">
                    <span asp-validation-for="Photo" class="form-text text-muted" style="color: red;"></span>
                </div>
                <input type="submit" class="btn btn-warning" value="Güncelle"/>
            </form>
        </div>
    </div>
</div>

