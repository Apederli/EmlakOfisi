@model LoginViewModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/Login.css" rel="stylesheet" />
<body style="background-color: bisque">
<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" asp-action="Login" asp-controller="Agent" method="post">
                        <h3 class="text-center text-info">Agent Giriş</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Kullanıcı Adı:</label><br>
                            <input type="text" asp-for="Username" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Şifre:</label><br>
                            <input type="text" asp-for="Password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <br>
                            <input type="submit" name="submit" class="btn btn-success" value="Giriş">
                            <a asp-controller="Admin" asp-action="Login" class="btn btn-info btn-sm float-right"> Admin Giriş</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>